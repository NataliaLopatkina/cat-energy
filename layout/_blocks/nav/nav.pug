mixin nav(activeElement)
    nav(class="nav header__nav")
        ul(class="nav__list")
            -
                var links = [
                    {
                        text: "Главная",
                        href: "index",
                    },

                    {
                        text: "Каталог продукции",
                        href: "catalog",
                    },

                    {
                        text: "Подбор программы",
                        href: "program",
                    },
                ]

            each item in links

                - var modActive = ""
                if activeElement == item.text
                    - modActive = " nav__link--active"

                li(class="nav__item")
                    a(href=item.href + ".html" class="nav__link" + modActive) !{item.text}
